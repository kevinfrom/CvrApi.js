{
    "compilerOptions": {
        "target": "es3",
        "watch": true,
        "declaration": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "lib": ["DOM", "ES2016"],
        "outDir": "./"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}